type Query {
    reservationsByUser(username: String!): [Reservation!]
}

type Mutation {
    create(screeningID: String!, username: String!, seatCount: Int): String!
}

type Reservation {
    id: String!
    username: String!
    screening: Screening
    seatCount: Int
}

# scalar MyDateTime

type Screening {

    time: String!
    room: String!
    availableTickets: Int
}
